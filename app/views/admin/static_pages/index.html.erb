<div class="container-fluid">
  <%= render "shared/search" %>
  <div class="container pt-5 pb-3">
    <div class="row">
      <h5><%= t ".table_title" %></h5>
      <% if @tours.empty? %>
        <%= t ".no_tours_msg" %>
      <% else %>
        <table class="table table-hover">
          <thread class="thead-light">
            <tr>
              <td><%= t ".id" %></td>
              <td><%= t ".title" %></td>
              <td><%= t ".active" %></td>
              <td><%= t ".created_date" %></td>
              <td><%= t ".updated_at" %></td>
              <td></td>
            </tr>
          </thread>
          <tbody>
            <%= render @tours %>
          </tbody>
        </table>
      <% end %>
    </div>
  </div>
  <%== pagy_bootstrap_nav @pagy %>
  <div class="mt-3 mb-5">
    <h4><%= t ".data_importing" %></h4>
    <%= form_tag import_admin_tours_path, multipart: true, class: "row g-3" do %>
      <div class="col-auto">
        <%= file_field_tag :file, class:"form-control" %>
      </div>
      <div class="col-auto">
        <%= submit_tag t(".importing_submit"), class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
